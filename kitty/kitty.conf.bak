
include ./kitty-themes/Grape.conf
shell_integration no-cursor
# cursor #a188f7
cursor_shape block
cursor_blink_interval 0.8
cursor_stop_blinking_after 5.0
mouse_hide_wait 0.5
# font_family NotoSansMono-Regular
# bold_font BlexMono Nerd Font Mono Bold
# italic_font BlexMono Nerd Font Mono Italic
# bold_italic_font BlexMono Nerd Font Mono Bold Italic
font_size 14.0

background_opacity 0.9
dynamic_background_opacity 1
confirm_os_window_close 0

# Animated cursor
cursor_trail 1

# change to x11 or wayland or leave auto
linux_display_server auto

scrollback_lines 2000
wheel_scroll_min_lines 1
touch_scroll_multiplier 7.0
wheel_scroll_multiplier 7.0

enable_audio_bell no

window_padding_width 4
# selection_foreground none
# selection_background none

tab_bar_style fade

# Match background to terminal
# tab_bar_background none

# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME

# Catppuccin-inspired selection colors
# selection_background #d5d5e2
# selection_foreground #000000

# cursor colors
# cursor #cba6f7
# cursor_text_color #0a0a12

# Tab colors
active_tab_foreground   #18162A
active_tab_background   #7DA2E3
inactive_tab_foreground #bed2f3
inactive_tab_background #202040




# BEGIN_KITTY_FONTS
font_family      family="BigBlueTerm437 Nerd Font"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS


